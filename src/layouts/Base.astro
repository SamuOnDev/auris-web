---
import '../styles/global.css';
import Nav from '../components/Nav.astro';

const { title = 'Auris International', description = 'Psicología y bienestar — auris.es' } = Astro.props;
const lang = (Astro.params.lang ?? 'es') as 'es' | 'en';
---
<html lang={lang} class="h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=TikTok+Sans:opsz,wght@12..36,300..900&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-landing text-white font-sans antialiased">
  <Nav />
  <main class="relative"><slot /></main>
    <footer class="mt-24 border-t border-white/10">
      <div class="mx-auto max-w-container px-4 py-10 text-xs text-white/60">
        © {new Date().getFullYear()} Auris International — auris.es
      </div>
    </footer>
  </body>
</html>
