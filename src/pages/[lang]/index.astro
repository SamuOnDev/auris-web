---
import Base from '../../layouts/Base.astro';
import { SUPPORTED, t, DEFAULT_LANG, type Lang } from '../../i18n';

export function getStaticPaths() {
  return SUPPORTED.map((lang) => ({ params: { lang } }));
}
const lang = (Astro.params.lang as Lang | undefined) ?? DEFAULT_LANG;
---
<Base title={`Auris Internacional — ${t(lang, 'nav_home')}`} lang={lang}>
  <section class="mx-auto max-w-container px-4 py-10 md:py-16">
    <!-- Mobile-first: 1 columna; en md → 2 columnas equilibradas -->
    <div
      class="grid md:grid-cols-2 md:gap-14 grid-cols-1 items-center gap-12  xl:grid-cols-[minmax(0,1.1fr)_minmax(0,0.9fr)]"
    >
      <!-- IZQUIERDA: texto -->
      <div class="space-y-6 text-left">
        <div class="inline-flex items-center gap-2 rounded-full bg-white/5 px-3 py-1 text-[11px] text-white/80 ring-1 ring-white/10">
          <span class="inline-block h-1.5 w-1.5 rounded-full bg-brand-accent"></span>
          {t(lang, 'badge')}
        </div>

        <h1 class="text-[32px] font-extrabold leading-tight tracking-tight text-white sm:text-[40px] md:text-[52px]">
          {t(lang, 'h1a')} <span class="text-brand-accent">{t(lang, 'h1b')}</span> {t(lang, 'h1c')}
        </h1>

        <p class="max-w-xl text-lg text-white/85">
          {t(lang, 'sub')}
        </p>

    <p class="max-w-xl text-sm text-white/60 sm:text-base">
          {t(lang, 'sub_alt')}
        </p>
      </div>
      <!-- DERECHA: imagen redondeada vertical -->
      <figure class="justify-self-center md:justify-self-end">
        <div class="mx-auto w-[260px] sm:w-[280px] md:w-[320px] lg:w-[360px]">
          <div class="overflow-hidden rounded-[220px] bg-white/5 shadow-[0_18px_40px_rgba(8,12,32,.45)]">
            <img
              src="/hero.jpg"
              alt=""
              class="block h-[420px] w-full object-cover object-top sm:h-[460px] md:h-[520px]"
              loading="eager"
              decoding="async"
            />
          </div>
          <div class="mx-auto mt-5 h-5 w-2/3 rounded-full bg-white/10 blur-xl"></div>
        </div>
      </figure>
    </div>
  </section>
</Base>