---
import Base from '../../layouts/Base.astro';
import type { Lang } from '../../i18n';
import { SUPPORTED, t } from '../../i18n';

export function getStaticPaths() {
  return SUPPORTED.map((lang) => ({ params: { lang } }));
}
const lang = (Astro.params.lang as Lang) ?? 'es';
---
<Base title="Auris International â€” Inicio" lang={lang}>
  <section class="relative mx-auto max-w-container overflow-hidden px-4 py-12 md:py-20">
    <div class="pointer-events-none absolute -top-32 right-[-10%] h-80 w-80 rounded-full bg-brand-accent/20 blur-3xl"></div>
    <div class="pointer-events-none absolute bottom-0 left-[-20%] hidden h-64 w-64 rounded-full bg-sky-500/20 blur-3xl md:block"></div>

    <div class="relative grid items-center gap-12 md:grid-cols-[minmax(0,1fr)_420px] md:gap-16">
      <!-- Texto -->
      <div>
        <div class="inline-flex items-center gap-2 rounded-full bg-white/5 px-4 py-1 text-xs uppercase tracking-[0.3em] text-white/60 ring-1 ring-white/10">
          <span class="h-1 w-1 rounded-full bg-brand-accent"></span>
          {t(lang, 'badge')}
        </div>

        <h1 class="mt-6 text-3xl font-extrabold leading-tight sm:text-4xl md:text-5xl">
          {t(lang, 'h1a')}
          <span class="text-brand-accent"> {t(lang, 'h1b')} </span>
          {t(lang, 'h1c')}
        </h1>

        <p class="mt-5 max-w-xl text-lg text-white/80">
          {t(lang, 'sub')}
        </p>

        <div class="mt-8 flex flex-col gap-3 sm:flex-row">
          <a href={`/${lang}/contact`}
              class="inline-flex items-center justify-center gap-2 rounded-full bg-brand-accent px-6 py-3 text-sm font-semibold text-brand-bg shadow-[0_20px_45px_-30px_rgba(190,242,100,1)] transition hover:shadow-[0_20px_45px_-20px_rgba(190,242,100,0.9)]">
            {t(lang, 'cta_primary')}
          </a>
          <a href={`/${lang}/contact`}
              class="inline-flex items-center justify-center rounded-full border border-white/20 px-6 py-3 text-sm font-semibold text-white transition hover:bg-white/10">
            {t(lang, 'cta_secondary')}
          </a>
        </div>

        <div class="mt-10 grid gap-4 sm:grid-cols-2">
          <div class="rounded-2xl border border-white/10 bg-white/5 p-4 text-sm text-white/70 shadow-[0_25px_45px_-35px_rgba(15,36,75,0.8)] backdrop-blur">
            <p class="text-xs uppercase tracking-[0.2em] text-brand-accent">Mindset</p>
            <p class="mt-2 font-semibold text-white">{lang === 'es' ? 'Ideas grandes para una mente en calma.' : 'Fill your brain with audacious dreams.'}</p>
          </div>
          <div class="flex items-center gap-3 rounded-2xl border border-white/10 bg-white/[0.07] p-4 text-sm">
            <div class="h-12 w-12 shrink-0 rounded-full bg-gradient-to-br from-brand-accent/70 to-brand-accent/20"></div>
            <div>
              <p class="text-xs uppercase tracking-[0.25em] text-white/60">+120</p>
              <p class="font-semibold text-white">{lang === 'es' ? 'Consultas completadas' : 'Sessions completed'}</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Imagen -->
      <div class="relative mx-auto w-full max-w-sm sm:max-w-md">
        <div class="relative overflow-hidden rounded-[160px] border border-white/10 bg-gradient-to-b from-white/10 via-transparent to-transparent p-1 shadow-[0_50px_90px_-40px_rgba(15,36,75,1)]">
          <div class="overflow-hidden rounded-[150px] bg-[#081124]">
            <img src="/hero.jpg" alt="" class="h-96 w-full object-cover mix-blend-lighten" loading="lazy" />
          </div>
          <div class="pointer-events-none absolute inset-0 rounded-[150px] bg-gradient-to-t from-brand-bg/60 via-transparent to-transparent mix-blend-screen opacity-60"></div>
        </div>
        <div class="absolute -bottom-12 left-1/2 h-24 w-3/4 -translate-x-1/2 rounded-full bg-brand-accent/20 blur-3xl"></div>
      </div>
    </div>
  </section>
</Base>