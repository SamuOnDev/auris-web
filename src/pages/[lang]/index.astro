---
import Base from '../../layouts/Base.astro';
import type { Lang } from '../../i18n';
import { SUPPORTED, t } from '../../i18n';

export function getStaticPaths() {
  return SUPPORTED.map((lang) => ({ params: { lang } }));
}
const lang = (Astro.params.lang as Lang) ?? 'es';
---
<Base title="Auris International — Inicio" lang={lang}>
  <section class="mx-auto max-w-container px-4 py-10 md:py-16">
  <!-- Mobile-first: 1 columna; en md → 2 columnas -->
  <div class="grid grid-cols-1 md:grid-cols-2 items-center gap-8 md:gap-10">

    <!-- IZQUIERDA: texto -->
    <div>
      <div class="inline-flex items-center gap-2 rounded-full bg-white/5 px-3 py-1 text-[11px] text-white/80 ring-1 ring-white/10">
        <span class="inline-block h-1.5 w-1.5 rounded-full bg-brand-accent"></span>
        {t(lang, 'badge')}
      </div>

      <h1 class="mt-4 text-[32px] sm:text-[40px] md:text-[52px] font-extrabold leading-tight tracking-tight text-white">
        {t(lang, 'h1a')} <span class="text-brand-accent">{t(lang, 'h1b')}</span> {t(lang, 'h1c')}
      </h1>

      <p class="mt-4 text-white/80 max-w-xl">
        {t(lang, 'sub')}
      </p>

      <div class="mt-6 flex flex-col sm:flex-row gap-3">
        <a href={`/${lang}/contact`}
            class="inline-flex justify-center rounded-md bg-brand-accent text-black font-semibold px-5 py-3 hover:opacity-90">
          {t(lang, 'cta_primary')}
        </a>
        <a href={`/${lang}/contact`}
            class="inline-flex justify-center rounded-md border border-white/20 px-5 py-3 text-white hover:bg-white/5">
          {t(lang, 'cta_secondary')}
        </a>
      </div>
    </div>

    <!-- DERECHA: imagen redondeada tamaño normal -->
    <figure class="justify-self-center md:justify-self-end w-full max-w-[420px]">
      <div class="rounded-arch overflow-hidden ring-1 ring-white/10 bg-white/5 shadow-[0_10px_30px_rgba(0,0,0,.25)]">
        <!-- alto fijo y recorte centrado para que no sea gigante -->
        <img
          src="/hero.jpg"
          alt=""
          class="block w-full h-[320px] sm:h-[360px] md:h-[420px] object-cover object-center"
          loading="eager"
          decoding="async"
        />
      </div>
      <!-- halo suave opcional -->
      <div class="mt-4 h-4 w-3/4 mx-auto rounded-full bg-white/10 blur-xl"></div>
    </figure>

  </div>
</section>
</Base>