---
import Base from '../../layouts/Base.astro';
import { SUPPORTED, type Lang } from '../../i18n';

export function getStaticPaths() {
  return SUPPORTED.map((lang) => ({ params: { lang } }));
}
const lang = (Astro.params.lang as Lang | undefined) ?? 'es';
---
<Base title="Auris — Quiénes somos" lang={lang}>
  <section class="mx-auto max-w-[1200px] px-4 py-10">
    <h1 class="text-2xl font-bold">Quiénes somos</h1>
    <p class="mt-3 text-white/80">Contenido provisional.</p>
    <p class="mt-3 text-white/60 text-sm">Ruta: /{lang}/about</p>
  </section>
</Base>
