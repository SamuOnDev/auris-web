---
import TermsPage from '../../components/legal/TermsPage.astro';
import { DEFAULT_LANG, SUPPORTED, type Lang } from '../../i18n';

export function getStaticPaths() {
    return SUPPORTED.map((lang) => ({ params: { lang } }));
}

const lang = (Astro.params.lang as Lang | undefined) ?? DEFAULT_LANG;
---
<TermsPage lang={lang} />