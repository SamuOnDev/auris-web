---
import Base from '../../layouts/Base.astro';
import { t, DEFAULT_LANG, type Lang } from '../../i18n';

const lang = (Astro.params.lang as Lang | undefined) ?? DEFAULT_LANG;
---
<Base title={`Auris Internacional â€” ${t(lang, 'cookie_policy_heading')}`} lang={lang}>
    <section class="mx-auto max-w-4xl px-4 py-16">
        <header class="space-y-4">
        <p class="text-sm uppercase tracking-[0.3em] text-brand-accent">Auris Internacional</p>
        <h1 class="text-3xl font-extrabold text-white sm:text-4xl">{t(lang, 'cookie_policy_heading')}</h1>
        <p class="max-w-3xl text-base text-white/80">{t(lang, 'cookie_policy_intro')}</p>
        </header>

        <div class="mt-12 space-y-10 text-sm leading-relaxed text-white/80 sm:text-base">
        <section class="space-y-3">
            <h2 class="text-xl font-semibold text-white sm:text-2xl">{t(lang, 'cookie_policy_what_are_title')}</h2>
            <p>{t(lang, 'cookie_policy_what_are_body')}</p>
        </section>

        <section class="space-y-3">
            <h2 class="text-xl font-semibold text-white sm:text-2xl">{t(lang, 'cookie_policy_types_title')}</h2>
            <ul class="space-y-3">
            <li>{t(lang, 'cookie_policy_types_necessary')}</li>
            <li>{t(lang, 'cookie_policy_types_functional')}</li>
            <li>{t(lang, 'cookie_policy_types_analytics')}</li>
            </ul>
        </section>

        <section class="space-y-3">
            <h2 class="text-xl font-semibold text-white sm:text-2xl">{t(lang, 'cookie_policy_management_title')}</h2>
            <p>{t(lang, 'cookie_policy_management_body')}</p>
        </section>

        <section class="space-y-3">
            <h2 class="text-xl font-semibold text-white sm:text-2xl">{t(lang, 'cookie_policy_changes_title')}</h2>
            <p>{t(lang, 'cookie_policy_changes_body')}</p>
        </section>

        <section class="space-y-3">
            <h2 class="text-xl font-semibold text-white sm:text-2xl">{t(lang, 'cookie_policy_contact_title')}</h2>
            <p>
            {t(lang, 'cookie_policy_contact_body')}
            <a class="ml-1 text-brand-accent underline decoration-2 underline-offset-4" href="mailto:info@auris.cat">
                {t(lang, 'cookie_policy_contact_email')}
            </a>
            .
            </p>
        </section>

        <p class="text-xs uppercase tracking-[0.25em] text-white/50">{t(lang, 'cookie_policy_last_updated')}</p>
        </div>
    </section>
</Base>
